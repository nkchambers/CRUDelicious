@model CRUDelicious.Models.Dish


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUDelicious</title>
</head>
<body>
    <div id="container" style="margin: 0px auto;">

        <h1 style="text-align: center; font-size: 50px;">Edit @Model.DishName</h1>
        <br><br>
        <a href="return_home"><button style="margin-left: 1500px; padding: 10px 30px; font-size: 20px;">Home</button></a>

        <form asp-action="UpdateDish" 
            style="display: flex; margin-top: 100px; background-color: #1d3030; color: skyblue; align-items: center; padding: 150px 0px; font-size: 25px;">
            
            <div class="lef-col" style="flex: 1; margin-left: 100px;">
                <div>
                    <span asp-validation-for="ChefName" style="color: red;"></span><br>
                    <label asp-for="ChefName"></label>
                    <input asp-for="ChefName" style="margin-left: 58px;"> 
                </div>

                <div>
                    <span asp-validation-for="DishName" style="color: red;"></span><br>
                    <label asp-for="DishName"></label>
                    <input asp-for="DishName" style="margin-left: 46px;"> 
                </div>

                <div>
                    <span asp-validation-for="Calories" style="color: red;"></span><br>
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" style="margin-left: 58px;"> 
                </div>
            </div>
            
            <div class="mid-col" style="flex: 1; margin-right: 150px;">
                <div>
                    <span asp-validation-for="Tastiness" style="color: red;"></span><br>
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness" style="margin-left: 25px; padding: 5px 30px;">
                        <option value="Select">Select</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>

            <div class="right-col" style="flex: 1;">
                <div>
                    <span asp-validation-for="Description" style="color: red;"></span><br>
                    <label asp-for="Description"></label><br>
                    <textarea asp-for="Description" rows="4" cols="50"></textarea> 
                </div>

                <button type="submit" style="margin-top: 30px; padding: 8px 26px; font-size: 20px;">Update Dish</button>

            </div>
        </form>

    </div>
</body>
</html>