@model List<CRUDelicious.Models.Dish>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <title>CRUDelicious</title>
</head>

<body>
    <div id="container" style="margin: 0px auto;">

        <h1 style="text-align: center;">Welcome to CRUDelicious</h1>
        
        <div class="body" style="display: flex;">

            <div class="col-left" style="flex: 2; margin-left: 50px;">

                <h3>Check out some of our recent dishes!</h3>

                <br><br>

                <table class="table table-striped table-dark">
                    <tr>
                        <th>Dish Name</th>
                        <th>Chef's Name</th>
                    </tr>
                    @foreach(var dish in Model)
                    {
                        <tr>
                            <td><a href="dish/@dish.DishId" style="color: skyblue;">@dish.DishName</a></td>
                            <td>@dish.ChefName</td>
                        </tr>
                    }
                </table>

            </div>

            <div class="col-right" style="flex: 1;">
                <a href="new_dish"><button style="margin-left: 300px; padding: 10px 30px; font-size: 20px; background-color: #1d3030; color: skyblue;">Add New Dish!</button></a>
            </div>
        </div>
    </div>

</body>
</html>